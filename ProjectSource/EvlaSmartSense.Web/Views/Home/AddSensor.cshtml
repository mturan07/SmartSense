@model EvlaSmartSense.Web.ViewModel.VmSensorField

@{
    ViewBag.Title = "Add New Sensor";
}

<div class="box box-info">
    <div class="box-header">
        @*<h3 class="box-title">@ViewBag.Title</h3>*@
        <p>
        </p>
    </div>
    <!-- /.box-header -->
    <div class="box-body">

        @using (Html.BeginForm("AddSensor", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Sensors.DEVICEID, "Sensor Name", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Sensors.DEVICEID, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Sensors.DEVICEID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Sensors.DESCRIPTION, "Description", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Sensors.DESCRIPTION, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Sensors.DESCRIPTION, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Sensors.FIELDID, "Field Name", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    @Html.DropDownListFor(model => model.Sensors.FIELDID, Model.AlanListesi, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Sensors.FIELDID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-info" />
                    <input type="button" class="btn btn-primary" value="Back To Sensors List"
                           onclick="location.href='@Url.Action("SensorsList", "Home")'" />
                </div>
            </div>
        </div>
        }

    </div>
    <!-- /.box-body -->
</div>
<!-- /.box -->